<%@page import="com.epic.bmlalipay.util.varlist.CommonVarList"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@taglib uri="/struts-tags" prefix="s" %>
<%@taglib  uri="/struts-jquery-tags" prefix="sj"%>
<%@taglib prefix="sjg" uri="/struts-jquery-grid-tags"%>
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

    <head>

        <%@include file="/stylelinks.jspf" %>

        <script type="text/javascript">
            window.onload = function () {

                $("#id").css("color", "black");

                var s = $("#addButton").is(':disabled');
                if (s == false) {
                    $('#id').attr('readOnly', false);
                } else {
                    $('#id').attr('readOnly', true);
                }
            };

            function editformatter(cellvalue, options, rowObject) {
//                a =  $("#addButton").is(':disabled');
//                u =  $("#updateButton").is(':disabled');               
                return "<a href='#' title='Edit' onClick='javascript:editListnerConfiguration(&#34;" + cellvalue + "&#34;)'><img class='ui-icon ui-icon-pencil' style='display: block;margin-left: auto;margin-right: auto;'/></a>";
            }

            function editListnerConfiguration(keyval) {
                $.ajax({
                    url: '${pageContext.request.contextPath}/findListnerConfiguration.action',
                    data: {id: keyval},
                    dataType: "json",
                    type: "POST",
                    success: function (data) {
                        $('#divmsg').empty();
                        var msg = data.message;
                        if (msg) {
                            $('#id').val("");
                            $('#id').attr('readOnly', false);
                            $("#id").css("color", "black");

                            $('#backlogSize').val("");
                            $('#prefix').val("");
                            $('#name').val("");
                            $('#port').val("");
                            $('#readTimeout').val("");
                            $('#uid').val("");
                            $('#type').val("");
                            $('#headerSize').val("");
                            $('#status').val('<s:property value="defaultStatus" />');
                            $('#status').prop('disabled', true);
                            $('#updateButton').button("disable");
                        }
                        else {

                            $('#id').val(data.id);
                            $("#id").css("color", "#858585");
                            $('#id').attr('readOnly', true);
                            $('#backlogSize').val(data.backlogSize);
                            $('#prefix').val(data.prefix);
                            $('#name').val(data.name);
                            $('#port').val(data.port);
                            $('#readTimeout').val(data.readTimeout);
                            $('#uid').val(data.uid);
                            $('#type').val(data.type);
                            $('#headerSize').val(data.headerSize);
                            $('#status').prop('disabled', false);
                            $('#status').val(data.status);
                            $('#oldvalue').val(data.oldvalue);
                            $('#updateButton').button("enable");
                        }
                    },
                    error: function (data) {
                        window.location = "${pageContext.request.contextPath}/LogoutUserLogin.action";

                    }
                });
            }

            function resetAllData() {
                var s = $("#updateButton").is(':disabled');
                if (s == true) {
                    editListnerConfiguration(null);
                } else {
                    var id = $('#id').val();
                    editListnerConfiguration(id);
                }
            }

            function resetFieldData() {
                $('#id').val("");
                $('#id').attr('readOnly', false);
                $("#id").css("color", "black");

                $('#backlogSize').val("");
                $('#prefix').val("");
                $('#name').val("");
                $('#port').val("");
                $('#readTimeout').val("");
                $('#uid').val("");
                $('#type').val("");
                $('#headerSize').val("");
                $('#status').val('<s:property value="defaultStatus" />');
                $('#status').prop('disabled', true);
                $('#updateButton').button("disable");

                jQuery("#gridtable").trigger("reloadGrid");
            }

            function cancelAllData() {
                editListnerConfiguration(null);
            }

        </script>

    </head>

    <body style="">
        <jsp:include page="/header.jsp"/>

        <div class="main-container">


            <jsp:include page="/leftmenu.jsp"/>

            <div class="main-content">

                <div class="container" style="min-height: 760px;">


                    <!-- start: PAGE NAVIGATION BAR -->
                    <jsp:include page="/navbar.jsp"/>
                    <!-- end: NAVIGATION BAR -->

                    <div class="row">


                        <div id="content1">


                            <s:div id="divmsg">

                                <s:actionerror theme="jquery"/>
                                <s:actionmessage theme="jquery"/>
                            </s:div>

                            <s:set id="vadd" var="vadd"><s:property value="vadd" default="true"/></s:set>
                            <s:set var="vupdatebutt"><s:property value="vupdatebutt" default="true"/></s:set>
                            <s:set var="vupdatelink"><s:property value="vupdatelink" default="true"/></s:set>                            

                                <div id="formstyle">
                                <s:form id="taskadd" method="post" action="ListnerConfiguration" theme="simple" >


                                    <s:hidden id="oldvalue" name="oldvalue" ></s:hidden>

                                        <div class="row row_1">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <span style="color: red">*</span><label>ID</label>
                                                <s:textfield cssClass="form-control" name="id" id="id" maxLength="4" onkeyup="$(this).val($(this).val().replace(/[^0-9]/g,'')); "/>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>UID</label>
                                                <s:textfield cssClass="form-control" name="uid" id="uid" maxLength="50" onkeyup="$(this).val($(this).val().replace(/[^a-zA-Z0-9]/g,'')); "/>
                                            </div>

                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Backlog Size</label>
                                                <s:textfield cssClass="form-control" name="backlogSize" id="backlogSize" maxLength="4" onkeyup="$(this).val($(this).val().replace(/[^0-9]/g,''))" onmouseout="$(this).val($(this).val().replace(/[^0-9]/g,''))"/>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Prefix</label>
                                                <s:textfield cssClass="form-control" name="prefix" id="prefix" maxLength="50" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row row_1">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Name</label>
                                                <s:textfield cssClass="form-control" name="name" id="name" maxLength="50" />
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Port</label>
                                                <s:textfield cssClass="form-control" name="port" id="port" maxLength="5" onkeyup="$(this).val($(this).val().replace(/[^0-9]/g,''))" onmouseout="$(this).val($(this).val().replace(/[^0-9]/g,''))"/>
                                            </div>

                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Read Timeout</label>
                                                <s:textfield cssClass="form-control" name="readTimeout" id="readTimeout" maxLength="5" onkeyup="$(this).val($(this).val().replace(/[^0-9]/g,''))" onmouseout="$(this).val($(this).val().replace(/[^0-9]/g,''))"/> (ms)
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Type</label>
                                                <s:select cssClass="form-control" id="type" list="%{listnerTypeList}"  headerValue="--Select Type--" headerKey="" name="type" listKey="id" listValue="description"  />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row row_1">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Header Size</label>
                                                <s:select cssClass="form-control" id="headerSize" list="%{listnerHeaderSizeList}"  headerValue="--Select Header Size--" headerKey="" name="headerSize" listKey="id" listValue="description"  />
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <span style="color: red">*</span><label>Status</label>
                                                <s:select cssClass="form-control" id="status" list="%{statusTypeList}"  headerValue="--Select Status--" headerKey="" name="status" listKey="statuscode" listValue="description" value="defaultStatus" disabled="true" />                     
                                            </div>

                                        </div>

                                    </div>
                                    <s:url var="updateurl" action="updateListnerConfiguration"/>
                                    <div class="row row_popup form-inline">
                                        <div class="col-sm-9">
                                            <div class="form-group">
                                                <span class="mandatoryfield">Mandatory fields are marked with *</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row row_1 form-inline">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <sj:submit button="true" href="%{updateurl}" value="Update" targets="divmsg"   disabled="#vupdatebutt" id="updateButton"
                                                           cssClass="form-control btn_normal"
                                                           cssStyle="border-radius: 12px;background-color:#969595;color:white;"/>
                                            </div>
                                            <div class="form-group">
                                                <sj:submit button="true" value="Reset" name="reset" onClick="resetAllData()" 
                                                           cssClass="form-control btn_normal"
                                                           cssStyle="border-radius: 12px;"/>
                                            </div>
                                            <div class="form-group">
                                                <sj:submit button="true" value="Cancel" name="cancel" onClick="cancelAllData()"
                                                           cssClass="form-control btn_normal"
                                                           cssStyle="border-radius: 12px;"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </s:form>
                        </div>

                        <%--                                                       start newly changed
                        <sj:dialog 
                            id="adddialog" 
                            buttons="{ 
                            'OK':function() { AddSection($(this).data('keyval'));$( this ).dialog( 'close' ); },
                            'Cancel':function() { $( this ).dialog( 'close' );} 
                            }" 
                            autoOpen="false" 
                            modal="true" 
                            title="Add Section"                            
                            />
                            Start add process dialog box 
                        <sj:dialog 
                            id="addsuccdialog" 
                            buttons="{
                            'OK':function() { $( this ).dialog( 'close' );}
                            }"  
                            autoOpen="false" 
                            modal="true" 
                            title="Adding Process." 
                            />
                        end newly changed

                             Start delete confirm dialog box 
                            <sj:dialog 
                                id="deletedialog" 
                                buttons="{ 
                                'OK':function() { deleteTask($(this).data('keyval'));$( this ).dialog( 'close' ); },
                                'Cancel':function() { $( this ).dialog( 'close' );} 
                                }" 
                                autoOpen="false" 
                                modal="true" 
                                title="Delete Task"                            
                                />
                             Start delete process dialog box 
                            <sj:dialog 
                                id="deletesuccdialog" 
                                buttons="{
                                'OK':function() { $( this ).dialog( 'close' );}
                                }"  
                                autoOpen="false" 
                                modal="true" 
                                title="Deleting Process." 
                                />
                             Start delete error dialog box 
                            <sj:dialog 
                                id="deleteerrordialog" 
                                buttons="{
                                'OK':function() { $( this ).dialog( 'close' );}                                    
                                }" 
                                autoOpen="false" 
                                modal="true" 
                                title="Delete error."
                                />--%>


                        <div id="tablediv">
                            <s:url var="listurl" action="listListnerConfiguration"/>
                            <sjg:grid
                                id="gridtable"
                                caption="Listener Configuration"
                                dataType="json"
                                href="%{listurl}"
                                pager="true"
                                gridModel="gridModel"
                                rowList="10,15,20"
                                rowNum="10"
                                autowidth="true"
                                shrinkToFit="false"
                                rownumbers="true"                                
                                onCompleteTopics="completetopics"
                                rowTotal="false"
                                viewrecords="true"
                                >
                                <sjg:gridColumn name="id" index="u.id" title="Edit" width="50" align="center" formatter="editformatter" hidden="#vupdatelink"/>                                
                                <sjg:gridColumn name="id" index="u.id" title="ID"  sortable="true"/>
                                <sjg:gridColumn name="uid" index="u.uid" title="UID"  sortable="true"/>
                                <sjg:gridColumn name="backlogSize" index="u.backlogsize" title="Backlog Size"  sortable="true"/>
                                <sjg:gridColumn name="prefix" index="u.prefix" title="Prefix"  sortable="true"/>
                                <sjg:gridColumn name="name" index="u.name" title="Name"  sortable="true"/>
                                <sjg:gridColumn name="port" index="u.port" title="Port"  sortable="true"/>
                                <sjg:gridColumn name="readTimeout" index="u.readtimeout" title="Read Timeout"  sortable="true"/>                                    
                                <sjg:gridColumn name="type" index="u.type" title="Type"  sortable="true"/>
                                <sjg:gridColumn name="headerSize" index="u.headersize.description" title="Header Size"  sortable="true"/>
                                <sjg:gridColumn name="status" index="u.status.description" title="Status"  sortable="true"/>
                            </sjg:grid> 
                        </div>

                    </div>

                </div>




                <!-- end: PAGE CONTENT-->
            </div>
        </div>
        <!-- end: PAGE -->
        </div>
        <!-- end: MAIN CONTAINER -->
        <!-- start: FOOTER -->
        <jsp:include page="/footer.jsp"/>
        <!-- end: FOOTER -->



        <!-- end: BODY -->
    </body>
</html>
