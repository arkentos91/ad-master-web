@import 'fonts.css';
html {
    background-color: #fff;
}
body {
    font: Raleway;
    padding: 0;
    margin: 0;
}
h6 {
    padding: 0;
    margin: 0;
}
.active {
    background-color: #ec3b29;
}
.company-logo {
    text-align: center;
}

/* The left-collapsing sidebar */

.sidebar-left-collapse::-webkit-scrollbar {
    width: 10px !important;
    background-color: #ecf0f1;
}
.sidebar-left-collapse::-webkit-scrollbar-thumb {
    box-shadow: inset 0 0 15px black;
    background-color: #2c3e50;
}
.sidebar-left-collapse {
    font-family: Raleway;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #34313A;
    width: 19%;
    height: 100%;
    overflow-y: auto;
    padding: 170px 0 100px 0;
}
.sidebar-left-collapse .sidebar-links {
    margin: 30px auto;
}
.sidebar-links div > a {
    display: block;
    text-decoration: none;
    margin: 0px auto 1px auto;
    padding: 2px 20px 2px 0px;
    text-align: right;
    color: white;
    font-size: 14px;
    font-weight: 800;
    transition: 0.2s;
}
.sidebar-links div > a:hover {
    background-color: black;
    border-left-width: 22px;
    color: white;
}
.sidebar-links div.selected > a {
    background-color: #1E2333;
    color: #ff3e3e;
    /*    line-height: 2.3;*/
    margin: 0;
}
.sidebar-links div ul.sub-links {
    max-height: 0;
    overflow: hidden;
    list-style: none;
    padding: 0 0 0 0;
    color: #b3bcc5;
    font-size: 12px;
    font-weight: bold;
    line-height: 24px;
    margin: 0;
    transition: 0.2s;
}
.sidebar-links div.selected ul.sub-links {
    max-height: 270px;
    padding: 6px 0 12px 0px;
}
.sidebar-links div .sub-links a {
    text-decoration: none;
    color: #ffffff;
    display: block;
    text-align: right;
    font-weight: 100;
    font-size: 12px;
    padding-right: 20px;
    /*background: #515151;*/
}
.sidebar-links > div > ul > li {
    /*border-bottom: 1px solid #bdbdbd;*/
    /*transition: 0.1s;*/
    /*padding: 1px 0 1px 20px;*/
}
.sidebar-links > div > ul > li:hover {
    background-color: #585858;
}

/* Link Colors */

.sidebar-links div.link-blue > a {
    border-color: #487db2;
}
.sidebar-links div.link-red > a {
    border-color: #da4545;
}
.sidebar-links div.link-yellow > a {
    border-color: #d0d237;
}
.sidebar-links div.link-green > a {
    border-color: #86be2e;
}
.sidebar-links div.link-default > a {
    border-color: #3F3F3F;
}
